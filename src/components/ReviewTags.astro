---
interface Props {
  tags?: {
    purpose?: string[];
    complexity?: string[];
    format?: string[];
  };
  size?: 'sm' | 'md';
  class?: string;
}

const { tags, size = 'md', class: className } = Astro.props;

const sizeClasses = {
  sm: 'text-xs px-2 py-0.5',
  md: 'text-sm px-2.5 py-1'
};

const tagIcons = {
  purpose: 'ğŸ¯',
