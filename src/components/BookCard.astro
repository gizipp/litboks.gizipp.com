---
interface Props {
  id: string;
  title: string;
  author: string;
  genres: string[];
  description: string;
  url: string;
  status: string;
  cover?: string;
}

const { id, title, author, genres, description, url, status, cover } = Astro.props;
---

<a 
  href={`/buku/${id}`} 
  data-umami-event={`View Book - ${title}`}
  class="block bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-4"
>
  <div class="aspect-[3/4] bg-gray-100 rounded-lg mb-4 overflow-hidden">
    {cover ? (
      <img 
        src={`/covers/${cover}`} 
        alt={`Cover ${title}`}
        class="w-full h-full object-cover"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center">
        <span class="text-gray-400">No Cover</span>
      </div>
    )}
  </div>
  <h3 class="font-semibold text-lg mb-1 line-clamp-2">{title}</h3>
  <p class="text-gray-600 text-sm mb-2">{author}</p>
  <div class="flex flex-wrap gap-1 mb-2">
    {genres.map(genre => (
      <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded-full">{genre}</span>
    ))}
  </div>
  <p class="text-gray-600 text-sm line-clamp-2">{description}</p>
</a> 