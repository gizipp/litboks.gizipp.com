---

<Layout title={book.title}>
  <article class="max-w-3xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
      <div class="grid grid-cols-1 md:grid-cols-[300px,1fr] gap-8">
        <div class="aspect-[3/4] bg-gray-100 rounded-lg overflow-hidden">
          {book.cover ? (
            <img 
              src={`/covers/${book.cover}`} 
              alt={`Cover ${book.title}`}
              class="w-full h-full object-cover"
            />
          ) : (
            <div class="w-full h-full flex items-center justify-center">
              <span class="text-gray-400">No Cover</span>
            </div>
          )}
        </div>
        <div>
          <h1 class="text-3xl font-bold mb-2">{book.title}</h1>
          <p class="text-gray-600 mb-4">oleh {book.author}</p>
          <div class="flex flex-wrap gap-2 mb-4">
            {book.genres.map(genre => (
              <span class="bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm">{genre}</span>
            ))}
          </div>
          <p class="text-gray-700 mb-6">{book.description}</p>
          <a 
            href={downloadUrl.toString()} 
            target="_blank" 
            rel="noopener noreferrer"
            data-umami-event={`Download Book - ${book.title}`}
            class="inline-block bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors"
          >
            Baca Buku
          </a>
        </div>
      </div>
    </div>

    <!-- Review Section -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-2xl font-bold mb-6">Review</h2>
      
      <!-- Review Form -->
      <div class="mb-8">
        <h3 class="text-lg font-semibold mb-4">Tulis Review</h3>
        <ReviewForm />
      </div>

