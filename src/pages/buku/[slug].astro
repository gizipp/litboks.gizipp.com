---
import Layout from '../../layouts/Layout.astro';
import RatingStars from '../../components/RatingStars.astro';
import ReviewForm from '../../components/ReviewForm.astro';
import booksData from '../../../books.json';

export async function getStaticPaths() {
  const books = booksData.categories.flatMap(category => 
    category.books.map(book => ({
      params: { slug: book.id },
      props: { book }
    }))
  );
  return books;
}

const { book } = Astro.props;

// Tambahkan parameter ref ke URL
const downloadUrl = new URL(book.url);
downloadUrl.searchParams.set('ref', 'litboks');

